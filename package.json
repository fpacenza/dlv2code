{
	"name": "asp-language-support-dlv2",
	"displayName": "ASP Language Support for DLV2 System",
	"description": "An extension for Answer Set Programming and DLV2 System",
	"version": "0.0.1",
    "publisher": "Riccardo Carnevali, Francesco Pacenza",
    "engines": {
        "vscode": "^1.69.0"
    },
    "author": {
        "name": "Riccardo Carnevali"
      },
    "categories": [
        "Programming Languages"
    ],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:asp-language-support-dlv2.computeAllAnswerSets",
		"onCommand:asp-language-support-dlv2.computeSingleAnswerSet",
		"onCommand:asp-language-support-dlv2.computeGroundProgram",
		"onCommand:asp-language-support-dlv2.linkFiles"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "asp-language-support-dlv2.computeSingleAnswerSet",
				"title": "Compute a single Answer Set",
				"category": "ASP",
				"enablement": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv"
			},
			{
				"command": "asp-language-support-dlv2.computeAllAnswerSets",
				"title": "Compute all Answer Sets",
				"category": "ASP",
				"enablement": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv"
			},
			{
				"command": "asp-language-support-dlv2.computeGroundProgram",
				"title": "Compute ground program",
				"category": "ASP",
				"enablement": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv"
			},
			{
				"command": "asp-language-support-dlv2.linkFiles",
				"title": "Link current file to others",
				"category": "ASP",
				"enablement": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv"
			}
		],
		"keybindings":[
			{
				"command": "asp-language-support-dlv2.computeSingleAnswerSet",
				"key": "ctrl+alt+s",
				"mac": "cmd+alt+s",
				"when": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv"
			},
			{
				"command": "asp-language-support-dlv2.computeAllAnswerSets",
				"key": "ctrl+alt+a",
				"mac": "cmd+alt+a",
				"when": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv"
			},
			{
				"command": "asp-language-support-dlv2.computeGroundProgram",
				"key": "ctrl+alt+g",
				"mac": "cmd+alt+g",
				"when": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv"
			},
			{
				"command": "asp-language-support-dlv2.linkFiles",
				"key": "ctrl+alt+l",
				"mac": "cmd+alt+l",
				"when": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv",
					"submenu": "asp-language-support-dlv2.solvingAndGrounding",
					"group": "main@1"
				},
				{
					"when": "resourceExtname == .lp || resourceExtname == .asp || resourceExtname == .dlv",
					"submenu": "asp-language-support-dlv2.linkings",
					"group": "main@2"
				}
			],
			"asp-language-support-dlv2.solvingAndGrounding": [
				{
					"command": "asp-language-support-dlv2.computeSingleAnswerSet"
				},
				{
					"command": "asp-language-support-dlv2.computeAllAnswerSets"
				},
				{
					"command": "asp-language-support-dlv2.computeGroundProgram"
				}
			],
			"asp-language-support-dlv2.linkings": [
				{
					"command": "asp-language-support-dlv2.linkFiles"
				}
			]
		},
		"submenus": [
			{
				"id": "asp-language-support-dlv2.solvingAndGrounding",
				"label" : "Solving and grounding"
			},
			{
				"id": "asp-language-support-dlv2.linkings",
				"label": "Linking"
			}
		],
        "languages": [{
            "id": "asp",
            "aliases": ["asp", "ASP-Core-2", "Answer Set Programming"],
            "extensions": [".lp",".asp",".dlv"],
            "configuration": "./language-configuration.json",
			"icon": {
				"light": "./images/icon.png",
				"dark": "./images/icon.png"
			}
        }],
        "grammars": [{
            "language": "asp",
            "scopeName": "source.asp",
            "path": "./syntaxes/asp.tmLanguage.json"
        }]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	},
    "license": "SEE LICENSE IN LICENSE.txt",
    "bugs": {
      "url": "https://github.com/fpacenza/dlv2code/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/fpacenza/dlv2code.git"
    },
    "homepage": "https://github.com/fpacenza/dlv2code/blob/main/README.md",
    "icon": "images/icon.png"
}
